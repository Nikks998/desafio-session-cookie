<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'Formulario' }) %>

  <body>
    <div class="vh-100 col-12 row justify-content-center align-items-center">
      <div class="card col-10 col-md-10 col-lg-8 shadow-lg">
        <div class="card-header py-3">
          <h2>Formulario</h2>
        </div>
        <div class="card-body">
          <form action="" method="POST" class="row">
            <div class="col-12 col-md-6 mb-3">
              <label for="name" class="form-label">Ingrese su nombre</label>
              <input type="text" value="<%= locals.old && (old.name && old.name) %>" class="form-control <%= locals.errors && (errors.name && 'is-invalid') %>" id="name" name="name">
              <small class="text-danger ms-2"><%= locals.errors && (errors.name && errors.name.msg) %></small>
            </div>
            <div class="mb-3 col-md-6 col-12">
              <label for="color" class="form-label">Seleccionar color</label>
              <select id="color" class="form-select" name="color">
                <option value="" selected hidden>colores...</option>
                <option value="red">Rojo</option>
                <option value="blue">Azul</option>
                <option value="yellow">Amarillo</option>
              </select>
              <small class="text-danger ms-2"><%= locals.errors && (errors.color && errors.color.msg) %></small>
            </div>
            <div class="col-12 col-md-6 mb-3">
              <label for="email" class="form-label">Ingrese su email</label>
              <input type="email" class="form-control <%= locals.errors && (errors.email && 'is-invalid') %>" id="email" name="email">
              <small class="text-danger ms-2"><%= locals.errors && (errors.email && errors.email.msg) %></small>
            </div>
            <div class="col-12 col-md-6 mb-3">
              <label for="age" class="form-label">Ingrese su edad</label>
              <input type="number" value="<%= locals.old && (old.age && old.age) %>" class="form-control <%= locals.errors && (errors.age && 'is-invalid') %>" id="age" name="age">
              <small class="text-danger ms-2"><%= locals.errors && (errors.age && errors.age.msg) %></small>
            </div>
            <div class="col-12 col-md-6 mb-3">
              <input type="checkbox" class="form-check-input" id="checkbox">
              <label class="form-check-label" for="checkbox">Recordar color</label>
            </div>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-primary">Enviar formulario</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>

</html>