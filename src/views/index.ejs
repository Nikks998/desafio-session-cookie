<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'Formulario' }) %>

  <body>
    <div class="main_container row justify-content-center align-items-center">
      <div class="card col-12 col-md-10 col-lg-8 mx-auto shadow-lg">
        <div class="card-header p-3">
          <h2>Formulario</h2>
        </div>
        <div class="card-body">
          <form action="" method="POST" class="row">
            <div class="col-12 col-md-6 mb-3">
              <label for="name" class="form-label">Ingrese su nombre</label>
              <input type="text" class="form-control <%= locals.errors && (errors.name && 'is-invalid') %>" id="name" name="name">
              <small class="text-danger ms-2"><%= locals.errors && (errors.name && errors.name.msg) %></small>
            </div>
            <div class="mb-3 col-6">
              <label for="color" class="form-label">Selecciona un color</label>
              <select id="color" class="form-select" name="color">
                <option selected hidden>colores...</option>
                <option class="" value="rojo">Rojo</option>
                <option class="" value="azul">Azul</option>
                <option class="" value="amarillo">Amarillo</option>
              </select>
            </div>
            <div class="col-12 col-md-6 mb-3">
              <label for="email" class="form-label">Ingrese su email</label>
              <input type="email" class="form-control" id="email" name="email">
            </div>
            <div class="col-12 col-md-6 mb-3">
              <label for="age" class="form-label">Ingrese su edad</label>
              <input type="number" class="form-control" id="age" name="age">
            </div>
            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1">
              <label class="form-check-label" for="exampleCheck1">Recordarme</label>
            </div>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-primary">Enviar formulario</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>

</html>